<!DOCTYPE html>
<html lang="en">
  <!-- Head -->
  <%- include("layout/header") -%>
  <body>
    <!-- Navigation-->
    <%- include("layout/navbar") -%>
    <!-- Banner -->
    <main class="banner-main">
      <div class="banner-info">
        <div class="heading">
          <h1>ADD APPOINTMENT</h1>
          <h2><a href="/" class="herf-tag">CLICK</a> HERE TO GO DASHBOARD</h2>
        </div>
      </div>
    </main>

    <section class="page-section" id="contact">
      <div class="container">
        <div class="row">
          <div class="col-sm-1"></div>
          <div class="col-sm-10">
            <div class="row">
              <% if(isError) { %>
              <div class="card">
                <div class="card-body" style="text-align: center">
                  <h6 style="color: red"><%= errorMessage %></h6>
                </div>
              </div>
              <% } else if(data) for(var i=0; i < data.length; i++) { %>
              <div class="col-sm-4 mb-4">
                <div class="card">
                  <div class="card-body">
                    <div style="display: flex">
                      <div class="col-md-7">
                        <h5 class="card-title"><%= data[i].firstname %></h5>
                      </div>
                      <% if(isError && data[i]._id==id) {%>
                      <div class="col-md-5">
                        <h6 style="color: red"><%= errorMessage %></h6>
                      </div>
                      <% } %>
                    </div>

                    <div style="display: flex">
                      <div class="col-sm-3" style="font-weight: 600">
                        <p>Make :</p>
                      </div>
                      <div class="col-sm-6">
                        <p><%= data[i].car_details.make %></p>
                      </div>
                    </div>
                    <div style="display: flex">
                      <div class="col-sm-3" style="font-weight: 600">
                        <p>Model :</p>
                      </div>
                      <div class="col-sm-6">
                        <p><%= data[i].car_details.model %></p>
                      </div>
                    </div>
                    <div style="display: flex">
                      <div class="col-sm-3" style="font-weight: 600">
                        <p>Year :</p>
                      </div>
                      <div class="col-sm-6">
                        <p><%= data[i].car_details.year %></p>
                      </div>
                    </div>
                    <% if(data[i].testResult == "PASS") {%>
                    <div style="display: flex; color: green">
                      <div class="col-sm-3" style="font-weight: 600">
                        <p>Result :</p>
                      </div>
                      <div class="col-sm-6">
                        <p><%= data[i].testResult %></p>
                      </div>
                    </div>
                    <% } else {%>
                    <div style="display: flex; color: red">
                      <div class="col-sm-3" style="font-weight: 600">
                        <p>Result :</p>
                      </div>
                      <div class="col-sm-6">
                        <p><%= data[i].testResult %></p>
                      </div>
                    </div>
                    <% } %>
                  </div>
                </div>
              </div>
              <% } %>
            </div>
          </div>
          <div class="col-sm-1"></div>
        </div>
      </div>
    </section>

    <!-- Footer-->
    <%- include("layout/footer") -%>
    <!-- JS -->
    <%- include("layout/script") -%>
  </body>
</html>
