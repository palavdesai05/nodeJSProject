<!DOCTYPE html>
<html lang="en">
  <!-- Head -->
  <%- include("layout/header") -%>
  <body>
    <!-- Navigation-->
    <%- include("layout/navbar") -%>
    <!-- Banner -->
    <main class="banner-main">
      <div class="banner-info">
        <div class="heading">
          <h1>LOGIN</h1>
          <h2><a href="/" class="herf-tag">CLICK</a> HERE TO GO DASHBOARD</h2>
        </div>
      </div>
    </main>

    <div class="card container mt-5 mb-5" style="width: 30rem">
      <div class="card-body">
        <h3>Registration</h3>
        <form
          class="needs-validation"
          action="sign-up"
          method="post"
          novalidate
        >
          <div class="mb-3">
            <label for="exampleInputName" class="form-label">Username</label>
            <input
              type="text"
              class="form-control"
              placeholder="Enter youer name"
              id="username"
              name="username"
              aria-describedby="nameHelp"
              required
            />
            <div class="valid-feedback">Please enter username.</div>
          </div>
          <div class="mb-3">
            <label for="exampleInputPassword1" class="form-label"
              >Password</label
            >
            <input
              type="password"
              class="form-control"
              placeholder="Enter your password"
              id="password"
              name="password"
              required
            />
            <div class="valid-feedback">Please enter your password.</div>
          </div>
          <div class="mb-3">
            <label for="exampleInputPassword1" class="form-label"
              >Confirm Password</label
            >
            <input
              type="password"
              class="form-control"
              placeholder="Enter your password"
              id="confirmPassword"
              name="confirmPassword"
              required
            />
            <div class="valid-feedback">Please enter your password.</div>
          </div>
          <div class="mb-3">
            <label for="exampleInputPassword1" class="form-label">Type</label>
            <select
              class="form-select"
              id="userType"
              name="userType"
              aria-label="Default select example"
            >
              <option value="Driver" selected>Driver</option>
              <option value="Admin">Admin</option>
              <option value="Examiner">Examiner</option>
            </select>
            <div class="valid-feedback">Please enter your type.</div>
          </div>
          <% if(validation.passwordErr) {%>
          <h6 style="color: red">Passowrd not match.</h6>
          <% } %>
          <div class="text-center">
            <button type="submit" class="btn btn-dark">Submit</button>
          </div>
        </form>
      </div>
    </div>

    <!-- Footer-->
    <%- include("layout/footer") -%>
    <!-- JS -->
    <%- include("layout/script") -%>
  </body>
</html>
